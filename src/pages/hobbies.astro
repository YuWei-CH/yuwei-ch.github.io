---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { locales, defaultLocale, localeEntries } from "../config";
import LanguageToggle from "../components/LanguageToggle.astro";
import "../styles/global.css";

const meta = Object.fromEntries(
  Object.entries(locales).map(([lang, config]) => [
    lang,
    {
      title: `${config.name} - ${config.ui.hobbies.title}`,
      description: config.ui.hobbies.pageIntro,
    },
  ])
);
const defaultConfig = locales[defaultLocale];
const accentColor = localeEntries[0][1].accentColor;
---

<html lang={defaultLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={meta[defaultLocale].description} />
    <title>{meta[defaultLocale].title}</title>
  </head>
  <body data-lang={defaultLocale}>
    <LanguageToggle meta={meta} />
    <Header />
    <main class="pt-16">
      <section class="p-8 sm:p-12 md:p-16 lg:p-24">
        {localeEntries.map(([lang, siteConfig]) => (
          <div class={`lang-block lang-${lang} max-w-4xl mx-auto space-y-6`}>
            <p class="text-sm font-semibold uppercase tracking-wide text-gray-500">
              {siteConfig.ui.common.moreAbout}
            </p>
            <h1 class="text-4xl sm:text-5xl font-bold text-gray-900">
              {siteConfig.ui.hobbies.title}
            </h1>
            <p class="text-lg sm:text-xl text-gray-600 leading-relaxed">
              {siteConfig.ui.hobbies.pageIntro}
            </p>
          </div>
        ))}
      </section>

      {localeEntries.map(([lang, siteConfig]) => {
        if (!siteConfig.hobbies || siteConfig.hobbies.length === 0) return;
        return (
          <section class={`lang-block lang-${lang} pb-12 sm:pb-16 md:pb-20 lg:pb-24 px-8 sm:px-12 md:px-16 lg:px-24`}>
            <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
              {siteConfig.hobbies.map((hobby, index) => (
                <div class="bg-white rounded-xl border border-gray-200 p-5 sm:p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
                  <div class="flex items-center justify-between mb-3">
                    <p class="text-sm font-mono" style={{ color: accentColor }}>
                      H0{index + 1}
                    </p>
                    <span class="inline-flex items-center px-3 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-700">
                      {siteConfig.ui.hobbies.badge}
                    </span>
                  </div>
                  <h2 class="text-2xl font-semibold text-gray-900">{hobby.name}</h2>
                  <p class="mt-3 text-sm sm:text-base text-gray-600 leading-relaxed">
                    {hobby.description}
                  </p>
                  {hobby.highlights && hobby.highlights.length > 0 && (
                    <ul class="mt-4 space-y-2">
                      {hobby.highlights.map((item) => (
                        <li class="flex items-start">
                          <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                          <span class="text-sm sm:text-base text-gray-700">{item}</span>
                        </li>
                      ))}
                    </ul>
                  )}
                </div>
              ))}
            </div>
          </section>
        );
      })}
    </main>
    <Footer />
  </body>
</html>
