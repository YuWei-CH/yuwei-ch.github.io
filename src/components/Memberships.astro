---
import { localeEntries } from "../config";

const accentColor = localeEntries[0][1].accentColor;
const hasMemberships = localeEntries.some(
  ([, siteConfig]) => siteConfig.memberships && siteConfig.memberships.length > 0
);
---

{
  hasMemberships && (
    <section id="membership" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
      {localeEntries.map(([lang, siteConfig]) => (
        <div class={`lang-block lang-${lang}`}>
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
            <div class="lg:col-span-4">
              <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
                {siteConfig.ui.memberships.title}
              </h2>
              <div
                class="w-[75px] h-[5px] mt-2 rounded-full"
                style={`background-color: ${accentColor}`}
              />
            </div>

            <div class="lg:col-span-8 space-y-6">
              {siteConfig.memberships.map((item, index) => (
                <div class="bg-white rounded-xl border border-gray-200 p-5 sm:p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3">
                    <div class="space-y-1">
                      <p class="text-sm font-mono" style={{ color: accentColor }}>
                        M0{index + 1}
                      </p>
                      <h3 class="text-xl sm:text-2xl font-semibold text-gray-900">
                        {item.org}
                      </h3>
                      <p class="text-base sm:text-lg text-gray-700">{item.role}</p>
                    </div>
                    <span class="text-xs sm:text-sm text-gray-500">{item.dateRange}</span>
                  </div>

                  <p class="mt-3 text-sm sm:text-base text-gray-600 leading-relaxed">
                    {item.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </section>
  )
}
